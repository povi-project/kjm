{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Pipeline (prompt args)",
      "type": "python",
      "request": "launch",
      "program": "scripts/pipeline.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--shot",
        "${input:shotId}",
        "--base-fps",
        "${input:baseFps}",
        "--target-fps",
        "${input:targetFps}",
        "--exp",
        "${input:exp}",
        "--width",
        "${input:width}",
        "--height",
        "${input:height}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "shotId",
      "type": "promptString",
      "description": "샷 폴더 이름 (예: shot_001)",
      "default": "shot_001"
    },
    {
      "id": "baseFps",
      "type": "promptString",
      "description": "베이스 프레임레이트 (4~12 권장)",
      "default": "8"
    },
    {
      "id": "exp",
      "type": "pickString",
      "description": "RIFE exp (배수) - auto면 자동 계산",
      "options": [
        "auto",
        "1",
        "2",
        "3"
      ],
      "default": "auto"
    },
    {
      "id": "width",
      "type": "promptString",
      "description": "출력 가로 해상도",
      "default": "1920"
    },
    {
      "id": "height",
      "type": "promptString",
      "description": "출력 세로 해상도",
      "default": "1080"
    },
    {
      "id": "targetFps",
      "type": "promptString",
      "description": "최종 FPS",
      "default": "24"
    },
    {
      "id": "tta",
      "type": "pickString",
      "description": "RIFE TTA 활성화?",
      "options": [
        "0",
        "1"
      ],
      "default": "0"
    },
    {
      "id": "uhd",
      "type": "pickString",
      "description": "UHD 모드?",
      "options": [
        "0",
        "1"
      ],
      "default": "0"
    },
    {
      "id": "scale",
      "type": "promptString",
      "description": "스케일(메모리 절약용, 1.0 그대로)",
      "default": "1.0"
    }
  ]
}